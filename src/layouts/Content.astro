---

const { category, items, title, subtitle } = Astro.props;

const hasSubcategories = items[0]?.content !== undefined;

---

<section class="w-full h-auto min-h-[80vh] p-2 color"> 
  <div class="parent w-full h-full overflow-hidden border-2 border-gray-300 border-dashed flex flex-col p-2 gap-2">
      <div class="titleContent border-2 w-full h-auto border-gray-300 px-4 py-1 flex-col center overflow-hidden">
        <h1 class="flex w-full title h-auto font-bold animate__fadeInUp">{title}</h1>
        <h2 class="flex w-full subtitle h-auto text-nowrap">
        {subtitle}
        </h2>
      </div>

  <div class="div3 w-full h-full flex">
    <ul class="w-full h-full flex flex-col gap-2 justify-around items-center">
      {hasSubcategories ? (
        <div class="w-full h-full flex flex-col gap-6">
          {items.map(subcategory => (
            <div class:list={[
              'w-full h-auto p-4',
              {
                'classic': subcategory.type == 'clasicos',
                'home': subcategory.type == 'De la casa',
                'panko': subcategory.type == 'Empanizados'
              }
            ]} >
              <h3 class="subCategory mb-3">
                {subcategory.type}
              </h3>
              <ul class="w-full flex flex-col gap-4 items-center">
                {subcategory.content.map(item => (
                  <li class="w-full h-auto border-2 flex border-dashed border-gray-300">
                    <div class="menuBlock w-full h-auto p-4 relative">
                      <p class="w-full h-auto flex flex-col relative gap-1">
                        <span class="titleMenu font-bold">{item.name}</span>
                        {item.ingredients.map(ing => (
                          <>
                            {ing.protein && <span class="textProtein">({ing.protein})</span>}
                            <span class="textDes">{ing.description}</span>
                            {ing.sauce && <span class="sauce">Salsa: {ing.sauce}</span>}
                          </>
                        ))}
                        <div class="flex w-full justify-between gap-2">
                          <span class="w-[85%] border-dashed border-b-[2px] relative bottom-2"></span>
                          <data class="priceMenu w-auto font-bold">{item.price}</data>
                        </div>
                      </p>
                      {item.type == "Empanizado" && (
                        <span class="ribbon"><p class="ribbonText">{item.type}</p></span>
                      )}
                      {item.type == "Frio" && (
                        <span class="ribbonCold"><p class="ribbonText">{item.type}</p></span>
                      )}
                    </div>
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
          )
       : (items.map((item) => (
              <li class="w-full h-auto border-2 flex border-dashed border-gray-300">
                <div class="menuBlock w-full h-auto p-4 relative ">
                  <p class=" w-full h-auto flex flex-col relative text-left gap-1">
                  <span class="titleMenu font-bold">
                  {item.name}
                  </span>
                {item.ingredients.map(ing => (
                  <>
                  {ing.protein && (
                  <span class="textProtein">({ing.protein})</span>
                  )}
                  <span class="textDes">{ing.description}</span>
                  {ing.sauce && (
                  <span class="sauce text-nowrap">Salsa: {ing.sauce}</span>
                  )}
                  </>
                ))}
                  {item.type 
                  ? (<data class="priceMenu font-bold">{item.price}</data>)
                  : (<div class="flex w-full justify-between gap-2">
                      <span class="w-[85%] border-dashed border-b-[2px] relative bottom-2"></span>
                      <data class="priceMenu w-auto font-bold">{item.price}</data>
                    </div>
                    )
                  }
                  </p>
                  {item.type == "Empanizado" && item.type && (<span class="ribbon"><p class="ribbonText">{item.type}</p></span>)}
                  {item.type == "Frio" && item.type && (<span class="ribbonCold"><p class="ribbonText">{item.type}</p></span>)}

                </div>
              </li>
            )))
      }
    </ul>
  </div>

  </div>
</section>
